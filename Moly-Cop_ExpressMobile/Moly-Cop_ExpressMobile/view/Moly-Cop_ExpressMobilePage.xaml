    xmlns:local="clr-namespace:MolyCop_ExpressMobile" 
    x:Class="MolyCop_ExpressMobile.Moly_Cop_ExpressMobilePage">

    <Grid >
  <Grid.RowDefinitions>
    <RowDefinition  Height="10*" />
    <RowDefinition  Height="80*" />
    <RowDefinition Height="10*"  />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="50*"  />
    <ColumnDefinition Width="50*" />
  </Grid.ColumnDefinitions>
        <Image Source="img/LOGO.png" Grid.Row="1"/>
